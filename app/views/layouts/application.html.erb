<!DOCTYPE html>
<html>
<head>
  <title>SmithMusic</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "defaults", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "http://yandex.st/bootstrap/3.0.2/css/bootstrap.min.css", media: "all" %>
  <%= javascript_include_tag "http://yandex.st/bootstrap/3.0.2/js/bootstrap.min.js" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
	<% if current_user.present? %>
		Welcome <%= current_user.user_name %>! | <%= link_to 'Sign out', logout_path %>
	<% else %>
		<%= link_to 'Register', new_user_path %> | <%= link_to 'Sign in', login_path %>
	<% end %>

	<%= notice %>
	<%= alert %>

	<%= yield %>
	</div>
</body>


